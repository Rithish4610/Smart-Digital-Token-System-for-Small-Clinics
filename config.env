# Smart Token System Configuration
# Customize these settings for your clinic

# Application Settings
APP_NAME=Smart Clinic Token System
APP_VERSION=2.0.0
DEBUG_MODE=False

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Database Settings
DATABASE_NAME=clinic.db
DATABASE_BACKUP_ENABLED=True
DATABASE_BACKUP_INTERVAL_HOURS=24

# Queue Management
# Average consultation time in minutes (used for wait time estimation)
AVG_CONSULTATION_TIME=5
# Auto-reset queue daily at this time (24-hour format, e.g., 00:00)
DAILY_RESET_TIME=00:00
# Maximum tokens per day (0 = unlimited)
MAX_TOKENS_PER_DAY=0

# Display Settings
# Refresh interval for public display in seconds
DISPLAY_REFRESH_INTERVAL=3
# Refresh interval for patient status page in seconds
PATIENT_REFRESH_INTERVAL=10
# Refresh interval for doctor dashboard in seconds
DOCTOR_REFRESH_INTERVAL=5

# Voice Announcement Settings
VOICE_ENABLED=True
VOICE_LANGUAGE=en-US
VOICE_RATE=0.9

# SMS/WhatsApp Notifications (Twilio)
# Get your credentials from https://www.twilio.com/
TWILIO_ACCOUNT_SID=your_sid_here
TWILIO_AUTH_TOKEN=your_token_here
TWILIO_PHONE_NUMBER=your_twilio_number_here
# Use WhatsApp instead of SMS (requires WhatsApp sandbox setup)
USE_WHATSAPP=True

# UI Customization
# Clinic name displayed on pages
CLINIC_NAME=Smart Clinic
# Primary brand color (hex code)
PRIMARY_COLOR=#06d6a0
# Secondary brand color (hex code)
SECONDARY_COLOR=#5e60ce
# Enable animations
ANIMATIONS_ENABLED=True

# Security Settings
# Session timeout in minutes
SESSION_TIMEOUT=60
# Enable patient verification (token + last 4 digits of phone)
PATIENT_VERIFICATION_ENABLED=True

# Logging
LOG_LEVEL=INFO
LOG_FILE=clinic_system.log
LOG_MAX_SIZE_MB=10

# Feature Flags
ENABLE_QR_CODES=True
ENABLE_PRINT_TOKEN=True
ENABLE_BROWSER_NOTIFICATIONS=True
ENABLE_STATS_DASHBOARD=True

# Advanced Settings
# CORS origins (comma-separated, * for all)
CORS_ORIGINS=*
# Timezone
TIMEZONE=Asia/Kolkata
# Date format
DATE_FORMAT=%Y-%m-%d
# Time format
TIME_FORMAT=%H:%M:%S
